<% if flash[:alert] %>
  <%= js add_gritter(flash[:alert], title: "Overtime App Alert", stick:false) %>
<% elsif flash[:error] %>
  <%= js add_gritter(flash[:error], title: "Overtime App Error", stick:false) %>
<% else %>
  <%= js add_gritter(flash[:notice], title: "Overtime App Notification", stick:false) %>
<% end %>
